var int windowWidth = 800;
var int windowHeight = 600;

var int flagWidth = 300;
var int flagHeight = 200;

var int bandWidth = flagWidth / 3;

var int startX = (windowWidth - flagWidth) / 2;
var int startY = (windowHeight - flagHeight) / 2;

window.clear(); //clear avant dessin

cursor cBlue = create_cursor(startX, startY);
cBlue.color(BLUE);
cBlue.draw_rectangle(bandWidth, flagHeight, true);

cursor cWhite = create_cursor(startX + bandWidth, startY);
cWhite.color(WHITE);
cWhite.draw_rectangle(bandWidth, flagHeight, true);

cursor cRed = create_cursor(startX + (bandWidth * 2), startY);
cRed.color(RED);
cRed.draw_rectangle(bandWidth, flagHeight, true);

window.update();
